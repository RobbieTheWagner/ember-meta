{{!-- General --}}
<title>{{model.title}}</title>
<meta name="description" content={{model.description}}>
<meta name="referrer" content="unsafe-url">

{{!-- AMP --}}
<link rel="canonical" href="{{model.url}}">

{{!-- Article --}}
{{#if model.date}}
  <meta property="article:published_time" content="{{model.date}}">
{{/if}}

{{#each model.tags as |tag|}}
  <meta property="article:tag" content="{{tag}}">
{{/each}}

{{!-- Facebook, Slack, etc --}}
<meta property="og:site_name" content="Ship Shape">
<meta property="og:title" content={{if model.articleTitle model.articleTitle model.title}}>
<meta property="og:description" content={{model.description}}>
<meta property="og:type" content={{model.type}}>
<meta property="og:image" content="http://i.imgur.com/KVqNjgO.png">
<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="256">
<meta property="og:image:height" content="256">
<meta property="og:url" content={{model.url}}>

{{!-- Twitter --}}
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content={{if model.articleTitle model.articleTitle model.title}}>
<meta name="twitter:description" content={{model.description}}>
<meta name="twitter:site" content="@shipshapecode">
<meta name="twitter:creator" content="@shipshapecode">
<meta name="twitter:url" content={{model.url}}>
<meta name="twitter:image:src" content="http://i.imgur.com/KVqNjgO.png">
{{#if model.author}}
  <meta name="twitter:label1" content="Written by">
  <meta name="twitter:data1" content="{{model.author}}">
{{/if}}
{{#if model.keywords}}
  <meta name="twitter:label2" content="Filed under">
  <meta name="twitter:data2" content="{{model.keywords}}">
{{/if}}
